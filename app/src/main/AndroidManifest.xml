<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmx.androidkotlinbase">

    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- LeanCloud基础模块 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".core.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.xmx.androidkotlinbase.core.activity.SplashActivity"
            android:theme="@style/AppTheme.SplashBackground">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.androidkotlinbase.model.data.sql.SQLActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.androidkotlinbase.model.data.cloud.CloudActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.androidkotlinbase.model.data.sync.SyncActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.androidkotlinbase.model.log.ExceptionTestActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.xmx.androidkotlinbase.model.log.OperationLogActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".model.user.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".model.user.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.xmx.androidkotlinbase.model.service.MainService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>