<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xmx.androidkotlinbase.Fragments.HomeFragment">

    <Button
        android:id="@+id/btnTempActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开临时Activity" />

    <Button
        android:id="@+id/btnVibrateOnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="震动一秒" />

    <Button
        android:id="@+id/btnVibrateForever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="持续震动" />

    <Button
        android:id="@+id/btnVibrateRhythm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="节奏震动" />

    <Button
        android:id="@+id/btnCancelVibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消震动" />

</LinearLayout>
